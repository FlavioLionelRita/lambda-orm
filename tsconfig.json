{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"declaration": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"target": "ES6",
		"module": "commonjs",
		"outDir": "./build",
		"baseUrl": "./src",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src/**/*",
		"Gruntfile.js"
	],
	"exclude": [
		"node_modules",
		"**/__jest__/*",
		"model.ts",
		"stageDelete.ts"
	],
	"ignoreRules": {
		"TS2307": true,
		"TS2339": true,
		"TS2551": true,
		"TS2554": true
	},
	"errorReporting": {
		"excludeCodes": [
			2307,
			2307,
			2551
		]
	}
}