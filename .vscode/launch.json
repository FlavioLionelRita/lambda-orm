    "version": "0.2.0",
    "configurations": [ 
        {
            "type": "node",
            "request": "launch",
            "name": "lab",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/lab/test.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "app",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/app/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test/debug.js"
        },           
        {
            "command": "npm run test",
            "name": "test",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "update config",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/config/build.js"
        },
        {
            "command": "npm run swagger",
            "name": "Run npm swagger",
            "request": "launch",
            "type": "node-terminal"
        },
    ]
}